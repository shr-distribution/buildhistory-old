#!/bin/sh
if [ "x$D" != "x" ] ; then
	if [ ! -f $INTERCEPT_DIR/update_font_cache ]; then
		cat << "EOF" > $INTERCEPT_DIR/update_font_cache
#!/bin/sh

qemuwrapper $D$(readelf -l $D/usr/bin/fc-cache| grep "Requesting program interpreter"|sed -e 's/^.*\[.*: \(.*\)\]/\1/') --library-path $D/lib:$D/usr/lib $D/usr/bin/fc-cache --sysroot=$D >/dev/null 2>&1

if [ $? -ne 0 ]; then
    exit 1
fi

EOF
	fi
	exit 0
fi

fc-cache
