#!/bin/sh
	update-alternatives --install /sbin/syslogd syslogd syslogd.sysklogd 100
	update-alternatives --install /sbin/klogd klogd klogd.sysklogd 100
	update-alternatives --install /etc/init.d/syslog syslog-init syslog.sysklogd 100
	update-alternatives --install /etc/syslog.conf syslog-conf syslog.conf.sysklogd 100
if test "x$D" != "x"; then
	OPT="-r $D"
else
	OPT="-s"
fi
update-rc.d $OPT syslog defaults
