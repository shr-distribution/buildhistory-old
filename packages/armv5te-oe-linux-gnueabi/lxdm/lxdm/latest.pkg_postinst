if [ "x$D" != "x" ]; then
    exit 1
fi
langs=""
for lang in `find /usr/lib/locale -maxdepth 1 | grep _ | sort`; do
    lang=`basename $lang`
    if [ "x$langs" = "x" ]; then
        langs="$lang"
    else
        langs="$langs $lang"
    fi
done
sed -i "s:last_langs=.*$:last_langs=$langs:g" /var/lib/lxdm/lxdm.conf
