#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS disable nfs-server.service nfs-mountd.service nfs-statd.service

	if [ -z "$D" -a "disable" = "enable" ]; then
		systemctl restart nfs-server.service nfs-mountd.service nfs-statd.service
	fi
fi
